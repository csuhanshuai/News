<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="horizontal"
    >
    
    <net.bangbao.widget.CircleImage
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/app_logo"/>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textSize="14sp"
                android:id="@+id/text_name"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lock"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/text_name"
                android:id="@+id/name"/>
            <TextView android:layout_width="75dp"
                android:layout_height="25dp"
                android:text="关注人数"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:gravity="center"
                android:background="@drawable/corner"
                android:layout_marginLeft="140dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textColor="#3384FF"
                android:textSize="14sp"
                android:layout_marginTop="3dp"
                android:layout_alignParentRight="true"
                android:id="@+id/num_focus"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="公司 :"
                android:textSize="14sp"
                android:id="@+id/text_comm"
                android:layout_marginLeft="10dp"
                />
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="宝辰"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/text_comm"
                android:id="@+id/comm"/>
            
            <LinearLayout android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                >
                <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别 :"
                android:textSize="14sp"
                />
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/text_gg"
                   android:textSize="14sp"
                   android:text="男"/>
            </LinearLayout>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学历:"
                android:textSize="14sp"
                android:layout_toLeftOf="@+id/xueli"
                android:layout_marginRight="10dp"/>
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本科"
                android:textSize="14sp"
                android:layout_alignParentRight="true"
                android:id="@+id/xueli"
                android:layout_marginRight="10dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
