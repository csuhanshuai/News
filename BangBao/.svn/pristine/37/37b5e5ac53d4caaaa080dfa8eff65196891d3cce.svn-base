<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- 下划线 -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/gray_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mServerLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text="分享给我的朋友"
            android:textColor="#666666"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <net.bangbao.widget.CircleImage
                    android:id="@+id/weixin"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/weichat_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="微信"
                    android:textColor="@color/share_pop_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <net.bangbao.widget.CircleImage
                    android:id="@+id/pengyouquan"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/pengyouquan_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="朋友圈"
                    android:textColor="@color/share_pop_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <net.bangbao.widget.CircleImage
                    android:id="@+id/qq"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/qq_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="QQ"
                    android:textColor="@color/share_pop_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:orientation="vertical" >

                <net.bangbao.widget.CircleImage
                    android:id="@+id/weibo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/weibo_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dip"
                    android:text="微博"
                    android:textColor="@color/share_pop_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:background="@drawable/selector_gray_5degree_button"
            android:gravity="center_horizontal"
            android:paddingBottom="6dip"
            android:paddingTop="6dip"
            android:text="取消"
            android:textColor="@drawable/share_cancel_text_color" />
    </LinearLayout>

</LinearLayout>