<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@android:color/white"
        >
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
        >

    <FrameLayout
            android:id="@+id/tab_content"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:background="#77557799"
            />
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tab_height"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@color/tab_line"
            >
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/tab_rb_1"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_pressed"
                android:gravity="center"
                android:id="@+id/tab1_image"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab1"
                android:id="@+id/tab1_text"
                android:textSize="12sp"
                android:textColor="@color/tab_select_text"/>
        </LinearLayout>
        
       <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/tab_rb_2"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ad_unpressed"
                android:gravity="center"
                android:id="@+id/tab2_image"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab2"
                android:id="@+id/tab2_text"
                android:textSize="12sp"
                android:textColor="@color/tab_unselect_text"/>
        </LinearLayout>
       <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/tab_rb_3"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/insurance_unpressed"
                android:gravity="center"
                android:id="@+id/tab3_image"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab3"
                android:id="@+id/tab3_text"
                android:textSize="12sp"
                android:textColor="@color/tab_unselect_text"/>
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/tab_rb_4"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/consult_unpressed"
                android:gravity="center"
                android:id="@+id/tab4_image"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab4"
                android:id="@+id/tab4_text"
                android:textSize="12sp"
                android:textColor="@color/tab_unselect_text"/>
        </LinearLayout>
       <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1.0"
            android:id="@+id/tab_rb_5"
            >
           <FrameLayout 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               >
               <ImageView
                android:layout_width="64dp"
                android:layout_height="32dp"
                android:background="@drawable/mine_unpressed"
                android:gravity="center"
                android:id="@+id/tab5_image"
                />
               <FrameLayout 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="top|center"
                   android:layout_marginLeft="8dp"
                   android:id="@+id/fram_circle"
                   android:visibility="gone">
                   <ImageView 
                      android:layout_width="15dp"
                      android:layout_height="15dp"
                      android:src="@drawable/circle"
                      android:layout_gravity="center"
                      />
                   <TextView 
                       android:id="@+id/text_count"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="5"
                       android:textSize="10dp"
                       android:textColor="@color/white"
                       android:layout_gravity="center"/>
               </FrameLayout>
           </FrameLayout>
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab5"
                android:id="@+id/tab5_text"
                android:textSize="12sp"
                android:textColor="@color/tab_unselect_text"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>

