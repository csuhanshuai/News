<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/net.bangbao"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_title_height"
        android:background="@color/white"
        >
        <ImageButton 
            android:id="@+id/back_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/arrow_left"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            onClick="onBack"
            android:clickable="true"
            />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="定点医院"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/spinner_company"
            android:text="公司"
            android:onClick="change"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:id="@+id/spinner_provice"
            android:text="省"
            android:onClick="change"
            android:clickable="true"
            android:padding="10dp"
            android:layout_marginRight="5dp"
            android:background="@color/blue"
            />
        <TextView 
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:id="@+id/spinner_city"
            android:text="市"
            android:onClick="change"
            android:clickable="true"
            android:padding="10dp"
            android:background="@color/blue"
            />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/locate_address"
        android:layout_weight="1.0"
         />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:visibility="gone"
        android:id="@+id/view_picker"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/gray"
            >
            <Button
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="取消"
                android:layout_alignParentLeft="true"
                android:id="@+id/cancel"/>
            <Button
                android:layout_width="65dp"
                android:layout_height="match_parent"
                android:text="确定"
                android:layout_alignParentRight="true"
                android:id="@+id/go"/>
        </RelativeLayout>
 <!--    <antistatic.spinnerwheel.WheelVerticalView 
        app:visibleItems="4"
        app:selectionDivider="@drawable/divider_dark_gradient_horizontal"
        app:selectionDividerHeight="1px"
        app:selectionDividerActiveAlpha="100"
        app:selectionDividerDimmedAlpha="255"
        android:id="@+id/picker"
        android:layout_height="150dp"
        android:layout_width="match_parent"
        />  -->   
    </LinearLayout>
</FrameLayout >

