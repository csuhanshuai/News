<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="net.bangbao.ui.RegisterActivity"
    android:background="@color/white" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#F7F7F7"
        >
        <FrameLayout 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/fram_back">
            <ImageView 
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_left"
            android:layout_gravity="center_vertical"
            />
        </FrameLayout>
        <TextView 
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户注册"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp"/>
    </RelativeLayout>
     <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:background="@color/gray_title" />
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp">
            
            <net.bangbao.widget.SegmentedGroup
            android:id="@+id/segmented_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >

            <RadioButton
                android:id="@+id/customer_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户"
                style="@style/RadioButton"
                android:checked="true" />

            <RadioButton
                android:id="@+id/custom_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="保险顾问"
                style="@style/RadioButton" />
           </net.bangbao.widget.SegmentedGroup>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:background="@drawable/layout_circle"
                    android:paddingLeft="10dp"
                    >
                    <EditText 
                        android:id="@+id/text_username"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="用户名"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:lines="1"
                        android:maxLength="16"
                        />
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/layout_circle"
                    >
                    <EditText 
                        android:id="@+id/text_password"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:hint="密码"
                        android:textSize="15sp"
                        android:lines="1"
                        android:maxLength="16"/>
                </LinearLayout>
                
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/layout_circle"
                    >
                    <EditText 
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:inputType="textPassword"
                        android:hint="密码确认"
                        android:textSize="15sp"
                        android:id="@+id/password_conform"
                        android:lines="1"
                        android:maxLength="16"/>
                </LinearLayout>
                <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/english_name_layout"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:background="@drawable/layout_circle"
                    >
                    <EditText 
                        android:id="@+id/english_username_edit"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="英文名"
                        android:textSize="15sp"
                        android:maxLength="80"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/layout_circle"
                    android:layout_marginTop="10dp"
                    android:id="@+id/comm_layout"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    >
                    <TextView 
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="公司"
                        android:textColor="@color/gray"
                        android:textSize="15sp"
                        android:id="@+id/comms_label"/>
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="英国保诚"
                        android:id="@+id/comms_text"
                        android:layout_centerInParent="true"
                        android:textColor="@color/register_text_color"
                        android:textSize="15sp"/>
                    
                    <ImageView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bt_down"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:id="@+id/comms_arrow"/>
                </RelativeLayout>
                
            <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/phone_layout"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:background="@drawable/layout_circle"
                    >
                    <EditText 
                        android:id="@+id/ctt_phone"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="联系方式"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:lines="1"/>
                </LinearLayout>
              <LinearLayout 
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:id="@+id/tuijianren_layout"
                    android:visibility="gone"
                    android:paddingLeft="10dp"
                    android:background="@drawable/layout_circle"
                    >
                    <EditText 
                        android:id="@+id/tuijianren_edit"
                        android:layout_weight="1.0"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="推荐人(选填)"
                        android:textSize="15sp"
                        android:inputType="text"
                        android:lines="1"/>
                </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                >
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="密码保护问题设置"
                    android:textColor="@color/register_text_color"
                    android:gravity="center|right"
                    android:layout_weight="1.0"
                    />
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:padding="10dp"
                    android:paddingRight="20dp"
                    android:id="@+id/pros_setting"
                    android:background="@drawable/layout_circle"
                    >
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="您的父亲叫什么名字"
                        android:id="@+id/question_text"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/register_text_color"
                        android:textSize="15sp"/>
                    
                    <ImageView 
                        android:id="@+id/probs_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bt_down"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView 
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="答案"
                    android:textColor="@color/register_text_color"
                    android:gravity="center|right"
                    android:layout_weight="1.0"
                    android:layout_marginRight="10dp"
                    />
                <EditText
                    android:background="@drawable/layout_circle"
                    android:paddingLeft="10dp"
                    android:id="@+id/probs_ans"
                    android:layout_alignParentRight="true" 
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:inputType="text"
                    android:lines="1"
                    />
            </LinearLayout>
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView 
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:maxLines="2"
                    android:text="请牢牢记住这个答案，以便以后通过答案找回密码！"
                    android:textColor="#4875d4"/>
            </RelativeLayout>
            <Button 
                android:id="@+id/complete"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="完成"
                android:textColor="@color/white"
                android:background="@drawable/complete_sel"
                />
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <TextView 
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="点击完成按钮，即表示你同意帮保的"
                    android:textColor="@color/register_text_color"
                    />
                <TextView 
                    android:id="@+id/service_item"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="@string/service_item"
                    android:textColor="#4875d4"
                />
            </LinearLayout>
            
        </LinearLayout>
    </ScrollView>
</LinearLayout>
