<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/news_head_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignBottom="@id/news_head_viewpager"
        android:background="#33000000"
        android:orientation="horizontal"
        android:padding="5dip" >

        <TextView
            android:id="@+id/news_head_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="14dp"
            android:layout_weight="8"
            android:singleLine="true"
            android:text="第一个引导页面"
            android:textColor="@android:color/white"
            android:textSize="@dimen/news_adv_title_textsize" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="14dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/news_head_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="1"
                android:textColor="@color/blue_title"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/news_head_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="/5"
                android:textColor="@color/white"
                android:textSize="10sp" />
        </LinearLayout>

        <!--
        <LinearLayout
            android:id="@+id/news_head_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal" >
        </LinearLayout>   -->
    </LinearLayout>

</RelativeLayout>